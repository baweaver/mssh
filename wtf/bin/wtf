#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'rubygems'
require 'wtf'
require 'ansi2html'

unless ARGV.length == 1
  puts "Usage: #{$0} thing"
  exit 1
end

wtf = WTF::Wtf.new
wtf.query(ARGV[0])

wtf.output.sort_by { |x| x[0].weight || 0 }.each do |k, v|
  puts v
  if v != ""
    puts ""
  end
end

